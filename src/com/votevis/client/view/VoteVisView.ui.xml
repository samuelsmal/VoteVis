<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:votevis='urn:import:com.votevis.client.presenter'>

	<ui:style>
		.statusDiv {
			text-align: right;
			margin: 1em;
		}

		.linksDiv {
			text-align: right;
		}

		.nav-ul {
			margin: 5 auto;
			height: 50px;
			width: 100%;
			background-color: #2A2A2A;
		}


		.nav-li {
			display: inline;
			font-size: 200%;
			color: white;
		}

		.foo {
			width: 100%;
			height: 30px;
		}

		.container {
			width: 80%;
			height: 100%;
			max-width: 400px;
			min-width: 200px;
			margin: 0 auto;
		}

		.brand {
			display: inline;
			font-size: 200%;
			color: white;
			padding-right: 300px;
			
		}
	</ui:style>

	<g:HTMLPanel ui:field='uber_container'>
		<g:ScrollPanel ui:field='container'>
			<g:HTMLPanel> <!-- ScrollPanel expects only widgets. -->

				<ul class='{style.nav-ul}'>
				    <li class='{style.brand}'> 
					VoteVis
				       </li>
					<li class='{style.nav-li}'>
						<g:Button ui:field='homeLink'>Home</g:Button>
					</li>
					<li class='{style.nav-li}'>
						<g:Button ui:field='aboutLink'>Über uns</g:Button>
					</li>
					<li class='{style.nav-li}'>
						<g:Button ui:field='contactLink'>Kontakt</g:Button>
					</li>
					<li class='{style.nav-li}'>
						<g:Button ui:field='selectionButton'>Abstimmung auswählen</g:Button>
					</li>
				</ul>
				
				<g:HTMLPanel ui:field='content' />
			</g:HTMLPanel>
		</g:ScrollPanel>
	</g:HTMLPanel>
</ui:UiBinder>
