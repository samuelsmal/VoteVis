<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:votevis='urn:import:com.votevis.client.presenter'>

  <ui:style>
     .vis-header {
		font-size: 200%;
	 }

	.vis-body {
	    position: center;
    width: 900px;
    height: 700px;
	}
  </ui:style>

  <g:HTMLPanel>
	<header class='{style.vis-header}'>
	    <span ui:field='titleSpan'/>
	</header>
	
	<div class='{style.vis-body}' ui:field='bodyDiv'>
	</div>
	
	<div>
	<votevis:CommentPresenter ui:field='comment'/>
	</div>
	
  </g:HTMLPanel>

</ui:UiBinder>
