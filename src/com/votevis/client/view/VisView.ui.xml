<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:votevis='urn:import:com.votevis.client.presenter'>

  <ui:style>
     .vis-header {
		text-align: center;
		font-size: 200%;
		position: center;
		margin: 0 auto;
	 }

	.vis-body {
		position: center;
		text_align: center;
    	width: 100%;
    	height: 100%;
		margin: auto;
	}
  </ui:style>

  <g:HTMLPanel>
    <header class='{style.vis-header}'><span ui:field='titleSpan'/></header>
   
	<div class='{style.vis-body}' ui:field='bodyDiv'></div>
	<votevis:CommentPresenter ui:field='comment'/>
  </g:HTMLPanel>

</ui:UiBinder>
